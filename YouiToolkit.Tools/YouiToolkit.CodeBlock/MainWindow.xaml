<Window x:Class="CodeBlock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeBlock"
        mc:Ignorable="d"
        Title="CodeBlock" Height="600" Width="900"
        Icon="youibot.ico">
    <Grid>
        <TextBox x:Name="textBox" IsReadOnly="False" ScrollViewer.CanContentScroll="True" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible"/>
    </Grid>
</Window>
